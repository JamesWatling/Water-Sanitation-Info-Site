<%- model_class = Post -%>
<div class="page-header">
  <h1>Latest News</h1>
</div>
<table class="table table-striped">
  <p align = "right">
    <% if current_user %>
<%= link_to t('.new', :default => t("helpers.links.new")),
            new_post_path,
            :class => 'btn btn-success' %>
  </p>
  <% end %>
  <tbody>
    <% @posts.each do |post| %>

      <tr>
        
        <h1><section id = <%= post.title %> ><%= link_to post.title, post_path(post) %></h1> <br/>
        <div class = "well well-large">
          
        <%= post.description %>
     <% User.where(:id => post.user_id).each do |row| %>
  <br />  <br />
          <p class = "pull-right">
        posted by: <%= row.email %>
      </p>
        <br />

        <hr>
        
       
          <u><%=l post.created_at, :format => :long %></u> 
         
         
               <% end %>
        <% if current_user %>
        <% if current_user.id = post.user_id %>

       
          <div class = "pull-right">
                  <%= link_to "Edit Post",
                      edit_post_path(post), :class => 'btn btn-mini' %>
          <%= link_to "Delete Post",
                      post_path(post),
                      :method => :delete,
                      :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
                      :class => 'btn btn-mini btn-mini' %>
        </div>
        <% end %>
      </div>

<% end %>
    <% end %>
  </tbody>
</table>

<script src="assets/js/bootstrap-scrollspy.js"></script>


