<div class="post">
  <h1><section id = <%= post.title %> ><%= link_to post.title, post_path(post) %></h1>
  <div class="details">
  	<div class = "well welllarge">
    <%= post.description %>
     <% User.where(:id => post.user_id).each do |row| %>
 
  <br />  <br />
          <p class = "pull-right">
        posted by: <%= row.email %>
    </p>
      <br />
   <hr>
        
       
          <u><%=l post.created_at, :format => :long %></u> 
         </p>
         
               <% end %>


               <div class = "pull-right">
                  <%= link_to "Edit Post",
                      edit_post_path(post), :class => 'btn btn-mini' %>
          <%= link_to "Delete Post",
                      post_path(post),
                      :method => :delete,
                      :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
                      :class => 'btn btn-mini btn-mini' %>
        </div>
      </div>
  </div>
</div>



